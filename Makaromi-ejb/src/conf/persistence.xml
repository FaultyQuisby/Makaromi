<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="Makaromi-ejbPU" transaction-type="JTA">
    <jta-data-source>jdbc/makaromi</jta-data-source>
    <class>entites.Address</class>

    <class>entites.Artist</class>
    <class>entites.Section</class>
    <class>entites.Event</class>
    <class>entites.Seat</class>
    <class>entites.Venue</class>
    <class>entites.Category</class>
    <class>entites.Pricing</class>
    <class>entites.Representation</class>
    <class>entites.Status</class>
    <class>entites.Ticket</class>
    <class>entites.UserReg</class>

    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
