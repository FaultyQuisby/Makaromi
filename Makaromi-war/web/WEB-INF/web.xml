<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="3.1">
<servlet>
        <servlet-name>IndexController</servlet-name>
        <servlet-class>controllers.IndexController</servlet-class>
        <init-param>
            <param-name>DetailsPageController</param-name>
            <param-value>controllers.sub.DetailsPageController</param-value>
        </init-param>
        <init-param>
            <param-name>MenuConnect</param-name>
            <param-value>controllers.sub.MenuConnect</param-value>
        </init-param>
        <init-param>
            <param-name>MenuPanier</param-name>
            <param-value>controllers.sub.MenuPanier</param-value>
        </init-param>
         <init-param>
            <param-name>OrderController</param-name>
            <param-value>controllers.sub.OrderController</param-value>
        </init-param>
        <init-param>
            <param-name>SectionController</param-name>
            <param-value>controllers.sub.SectionController</param-value>
        </init-param>
        <init-param>
            <param-name>ShoppingCartController</param-name>
            <param-value>controllers.sub.ShoppingCartController</param-value>
        </init-param>
</servlet>
    <servlet-mapping>
        <servlet-name>IndexController</servlet-name>
        <url-pattern>/IndexController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/page404.html</location>
    </error-page>
</web-app>


